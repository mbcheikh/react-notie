{
    "name": "react-notie",
    "version": "2.0.0-alpha.4",
    "description": "Simple notification, input and selection suite for react",
    "main": "lib/index.js",
    "module": "esm/index.js",
    "scripts": {
        "test": "jest --no-cache",
        "coverage": "jest --no-cache --coverage",
        "clean": "rimraf ./esm ./lib ./esnext",
        "build": "yarn run clean && yarn run build:all",
        "build:all": "yarn run build:esm && yarn run build:cjs && yarn run build:esnext",
        "build:esm": "tsc --target es5 --module es6 --lib es2015,dom --outDir ./esm",
        "build:cjs": "tsc --target es5 --module commonjs --lib es2015,dom --outDir ./lib",
        "build:esnext": "tsc --target es6 --module es6 --outDir ./esnext",
        "prepublishOnly": "yarn test && yarn run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vkbansal/react-notie.git"
    },
    "files": [
        "esm",
        "esnext",
        "lib"
    ],
    "keywords": [
        "react",
        "reactjs",
        "react-component",
        "notification",
        "confirm",
        "alert",
        "toast",
        "notify"
    ],
    "author": "Vivek Kumar Bansal <contact@vkbansal.me>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/vkbansal/react-notie/issues"
    },
    "homepage": "https://github.com/vkbansal/react-notie#readme",
    "peerDependencies": {
        "emotion": "^10.0.0",
        "react": "^16.4.0",
        "react-dom": "^16.4.0"
    },
    "resolutions": {
        "@types/react": "16.7.22"
    },
    "devDependencies": {
        "@babel/core": "7.2.2",
        "@babel/preset-env": "7.3.1",
        "@babel/preset-react": "7.0.0",
        "@babel/preset-typescript": "7.1.0",
        "@types/enzyme": "3.1.16",
        "@types/jest": "23.3.13",
        "@types/react": "~16.7.22",
        "@types/react-dom": "~16.0.11",
        "babel-jest": "24.0.0",
        "cross-env": "~5.2.0",
        "emotion": "~10.0.6",
        "enzyme": "~3.8.0",
        "enzyme-adapter-react-16": "~1.8.0",
        "enzyme-to-json": "~3.3.5",
        "jest": "~24.0.0",
        "jest-emotion": "~10.0.6",
        "jsdom": "~13.2.0",
        "react": "~16.7.0",
        "react-dom": "~16.7.0",
        "rimraf": "~2.6.3",
        "ts-jest": "23.10.5",
        "typescript": "~3.2.4"
    },
    "jest": {
        "setupFiles": [
            "<rootDir>/.jest-setup.js"
        ],
        "testMatch": [
            "**/?(*.)(spec|test).ts?(x)"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer",
            "jest-emotion/serializer"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.{ts,tsx}",
            "!**/__tests__/**"
        ]
    }
}
